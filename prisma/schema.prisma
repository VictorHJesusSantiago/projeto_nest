generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id      Int     @id @default(autoincrement())
  name    String
  subject String
  guests  Guest[] // Relação 1:N -> Um Teacher tem muitos Guests
}

model Guest {
  id   Int     @id @default(autoincrement())
  name String
  rsvp Boolean

  // Chave estrangeira e relação N:1
  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}